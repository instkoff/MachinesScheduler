<Application
    x:Class="MachinesScheduler.WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MachinesScheduler.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:MachinesScheduler.WPF.ViewModels"
    mc:Ignorable="d">

    <Application.Resources>
        <ResourceDictionary>
            <viewModels:ViewModelLocator
                xmlns:vm="clr-namespace:MachinesScheduler.WPF"
                x:Key="Locator"
                d:IsDataSource="True" />

            <Style TargetType="Window">
                <Setter Property="FontSize" Value="20" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
